# Backend Environment Variables for Production

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration (Your Vercel frontend URL will go here)
CORS_ORIGIN=https://your-app.vercel.app

# JWT Configuration (Generate secure secrets)
JWT_SECRET=CHANGE_ME_TO_SECURE_64_CHAR_SECRET
JWT_EXPIRY=12h

# Device Configuration
DEVICE_ID=meter-001
DEVICE_API_KEY=CHANGE_ME_TO_SECURE_48_CHAR_KEY

# Database Configuration
DB_FILE=./storage/smartmeter.sqlite

# Tariff Configuration (per kWh in your currency)
BASE_TARIFF_PER_KWH=6.5
